# Dockerfile para el servicio de backup
FROM postgres:15-alpine

# Instalar cron, herramientas y dos2unix para convertir line endings
RUN apk add --no-cache bash dcron dos2unix

# Crear directorio de backups
RUN mkdir -p /backups

# Copiar scripts
COPY scripts/backup.sh /usr/local/bin/backup.sh
COPY scripts/restore.sh /usr/local/bin/restore.sh

# Convertir CRLF a LF y dar permisos
RUN dos2unix /usr/local/bin/backup.sh /usr/local/bin/restore.sh && \
    chmod +x /usr/local/bin/backup.sh /usr/local/bin/restore.sh

# Script de entrada que configura cron din√°micamente
COPY scripts/backup-entrypoint.sh /entrypoint.sh
RUN dos2unix /entrypoint.sh && chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
