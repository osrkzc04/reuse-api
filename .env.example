# ==========================================
# CONFIGURACIÓN LOCAL - Reuse API
# ==========================================
# Este archivo es para desarrollo local con Docker
# ==========================================

# ==========================================
# DATABASE (Docker compose)
# ==========================================
DATABASE_URL=postgresql://postgres:tu_password@localhost:5432/reuse_db

# Configuración de PostgreSQL (para docker-compose)
POSTGRES_DB=reuse_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_segura

# ==========================================
# SECURITY
# ==========================================
SECRET_KEY=genera_una_clave_secreta_aqui_con_openssl_rand_hex_32

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# APPLICATION
# ==========================================
APP_NAME=Reuse API
APP_VERSION=1.0.0

# Modo debug para desarrollo local
DEBUG=False

# Puerto de la API
API_PORT=5002

# CORS - Permitir localhost para desarrollo
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# ADMIN USER
# ==========================================
ADMIN_EMAIL=admin@puce.edu.ec
ADMIN_PASSWORD=cambiar_esta_password

# ==========================================
# FILE UPLOAD
# ==========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# ==========================================
# EMAIL SMTP (Deshabilitado por defecto)
# ==========================================
# Para habilitar, configura las credenciales y pon SMTP_ENABLED=True
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=Reuse PUCE
SMTP_USE_TLS=True
SMTP_ENABLED=False

# ==========================================
# FRONTEND URL
# ==========================================
# URL del frontend para enlaces en correos (verificación, recuperación, etc.)
# Cambiar según el entorno:
#   - Desarrollo local: http://localhost:3000
#   - Producción: https://reuse.puce.edu.ec
FRONTEND_URL=http://localhost:3000

# ==========================================
# CLOUDFLARE R2 STORAGE (Opcional)
# ==========================================
# Deshabilitado = almacenamiento local
# Habilitado = Cloudflare R2
R2_ENABLED=False
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_PUBLIC_URL=